<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
	<ui:style>
	.collapse {
		background-color: #1D212A;
		margin: 0;
		padding: 0;
		border: none;
	}
	
	.sidebar {
		background-color: #1D212A;
		margin: 10px 0;
		padding: 0;
		border: none;
		min-height: literal("100vh");
		height: literal("100vh");
	}
	
	.sidebar a {
		color: #B3B8C3;
		font-weight: 600;
	}
	
	.sidebar a:hover, .sidebar a:focus {
		background-color: #FFFFFF;
		color: #1D2939;
	}
	
	.sidebar a.open{
		background-color: #FFFFFF;
		color: #1D2939;
	}
	
	.pills {
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.sub {
		padding: 0;
		margin: 0;
	}
	
	.sub li a {
		margin-left: 45px;
		font-size: 0.813em;
	}
	
	.headerbar {
		
		float: left;
		margin:0;
		padding:0;
	}
	
	.headerbar button {
		background-color: #F8F8F8;
		border-color: #DDD;
		margin:0;
		padding:0;
	}
	
	.headerbar button span {
		background-color: #888888;
	}
	</ui:style>

	<g:HTMLPanel>
		<g:FlowPanel addStyleNames="{style.headerbar}">
			<b:NavbarCollapseButton dataTarget="#navbar-collapse" />
		</g:FlowPanel>
		<b:NavbarCollapse b:id="navbar-collapse"
			addStyleNames="{style.collapse}">
			<b:Navbar addStyleNames="{style.sidebar}">
				<b:NavPills stacked="true" addStyleNames="{style.pills}">
					<b:AnchorListItem active="true">DashBoard</b:AnchorListItem>
					<b:AnchorListItem>Buttons</b:AnchorListItem>
					<b:ListItem>
						<b:Anchor dataToggle="COLLAPSE" dataParent=".{style.sidebar}"
							dataTarget="#collapseDialog">Dialogues</b:Anchor>
					</b:ListItem>
					<b:PanelCollapse b:id="collapseDialog">
						<b:NavPills stacked="true" addStyleNames="{style.sub}">
							<b:AnchorListItem>Alert</b:AnchorListItem>
							<b:AnchorListItem>Info</b:AnchorListItem>
							<b:AnchorListItem>Warning</b:AnchorListItem>
						</b:NavPills>
					</b:PanelCollapse>
					<b:AnchorListItem>Popover</b:AnchorListItem>
					<b:AnchorListItem>Tooltip</b:AnchorListItem>
					<b:AnchorListItem>Carousel</b:AnchorListItem>
					<b:AnchorListItem>Maps</b:AnchorListItem>
					<b:AnchorListItem>Tables</b:AnchorListItem>
				</b:NavPills>

			</b:Navbar>
		</b:NavbarCollapse>

	</g:HTMLPanel>
</ui:UiBinder> 